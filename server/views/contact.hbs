<section class="contact-form-container">
        <h2>Contact Us</h2>
        <form class="contact-form">
            <div class="form-group">
                <label for="contact-name">Username</label>
                <input type="text" id="name" name="name" placeholder="Your Username">
                <span class="error-message" id="name-error"></span>
            </div>
            <div class="form-group">
                <label for="email">SOMA &copy Email Address</label>
                <input type="email" id="contact-email" name="email" placeholder="Enter in your SOMA&copy email address">
                <span class="error-message" id="email-error"></span>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" name="message" rows="6" placeholder="Send SOMA a message"></textarea>
                <span class="error-message" id="message-error"></span>
            </div>
            <button type="submit" class="submit-btn">Send Message</button>
        </form>
    </section>
